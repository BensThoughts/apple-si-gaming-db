{
  "private": true,
  "name": "remix-app",
  "version": "0.0.1",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ../../node_modules/dotenv/config ./build/server.js",
    "devBACKUP:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "generate:css": "tailwindcss -i ./app/styles/global.css -o ./app/styles/tailwind.css",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint ."
  },
  "dependencies": {
    "@apple-si-gaming-db/database": "*",
    "@headlessui/react": "^1.6.6",
    "@remix-run/express": "^1.7.0",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "autoprefixer": "^10.4.8",
    "axios": "^0.27.2",
    "compression": "^1.7.4",
    "cookie-session": "^2.0.0",
    "cross-env": "^7.0.3",
    "express": "^4.18.1",
    "isbot": "^3.5.2",
    "morgan": "^1.10.0",
    "passport": "0.5.3",
    "passport-steam": "^1.0.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.4.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-session": "^2.0.44",
    "@types/morgan": "^1.9.3",
    "@types/passport": "^1.0.10",
    "@types/passport-steam": "^1.0.1",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "esbuild": "^0.15.6",
    "eslint": "^8.20.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build"
  ]
}
